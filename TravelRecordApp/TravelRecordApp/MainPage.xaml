<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.MainPage">
    <StackLayout VerticalOptions="Center" Margin="20">
        <Entry Placeholder="Email address" Keyboard="Email" x:Name="emailEntry"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="passwordEntry"/>
        <Button x:Name="LoginButton" Text="Log in" Clicked="LoginButton_Clicked"
                BackgroundColor="DodgerBlue" TextColor="White"
                Margin="0,50,0,0"
                />
    </StackLayout>
</ContentPage>
